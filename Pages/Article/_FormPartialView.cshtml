@using Videotheque.Data
@model Article

<div class="form-group">
  <label asp-for="Film" class="control-label"></label>
  <select asp-for="FilmId" class="form-control" asp-items="ViewBag.FilmId">
    <option value="" class="selectTagHelperFirstEmptyLine">
      Please select one
    </option>
  </select>
  <span asp-validation-for="FilmId" class="text-danger"></span>
</div>
<div class="form-group">
  <label asp-for="Disc" class="control-label"></label>
  <select asp-for="Disc" class="form-control"></select>
  <span asp-validation-for="Disc" class="text-danger"></span>
</div>
<div class="form-group">
  <label asp-for="Box" class="control-label"></label>
  <select asp-for="Box" class="form-control"></select>
  <span asp-validation-for="Box" class="text-danger"></span>
</div>
<div class="form-group form-check">
  <label class="form-check-label">
    <input class="form-check-input" asp-for="IsLost" />
    @Html.DisplayNameFor(model => model.IsLost)
  </label>
</div>
<div class="form-group">
  <label asp-for="Comment" class="control-label"></label>
  <input asp-for="Comment" class="form-control" />
  <span asp-validation-for="Comment" class="text-danger"></span>
</div>
<div class="form-group">
  <label asp-for="BorrowingDate" class="control-label"></label>
  <input type="date" asp-for="BorrowingDate" class="form-control" />
  <span asp-validation-for="BorrowingDate" class="text-danger"></span>
</div>
<div class="form-group">
  <label asp-for="ReturnDate" class="control-label"></label>
  <input type="date" asp-for="ReturnDate" class="form-control" />
  <span asp-validation-for="ReturnDate" class="text-danger"></span>
</div>
<div class="form-group">
  <label asp-for="BorrowerId" class="control-label"></label>
  <select asp-for="BorrowerId" class ="form-control"
    asp-items="ViewBag.BorrowerId">
    <option value="" class="selectTagHelperFirstEmptyLine">
      Please select one
    </option>
  </select>
</div>

