@using Videotheque.Data
@model Article

<tbody>
  <tr>
    <td>
      <a asp-page="/Article/Details"
          asp-route-id="@Model.Id">
        @Html.DisplayFor(model => model.Id)
      </a>
    </td>
    <td>
      @if (Model.BorrowingDate != null)
      {
        @(TimeZoneInfo.ConvertTimeFromUtc((DateTime)Model.BorrowingDate,
            TimeZoneInfo.Local))
      }
    </td>
    <td>
      @if (Model.ReturnDate != null)
      {
        @(TimeZoneInfo.ConvertTimeFromUtc((DateTime)Model.ReturnDate,
            TimeZoneInfo.Local))
      }
    </td>
    @if (!@Context.Request.Path.ToString().StartsWith("/Customer",
      System.StringComparison.InvariantCultureIgnoreCase))
    {
      <td>
        <a asp-page="/Customer/Details"
            asp-route-id="@Model.BorrowerId">
          @Html.DisplayFor(model => model.BorrowerId)
        </a>
      </td>
    }
    @if (!@Context.Request.Path.ToString().StartsWith("/Film",
      System.StringComparison.InvariantCultureIgnoreCase))
    {
      <td>
        <a asp-page="/Film/Details"
            asp-route-id="@Model.FilmId">
          @Html.DisplayFor(model => model.FilmId)
        </a>
      </td>
      <td>
          @Html.DisplayFor(model => model.Film.Title)
      </td>
    }
  </tr>
</tbody>

