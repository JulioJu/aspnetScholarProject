@using Videotheque.Data

@{
  Article item = (Article) ViewData["field"];
}

<td>
  @Html.DisplayFor(modelItem => item.FilmId)
</td>
<td>
  @Html.DisplayFor(modelItem => item.Film.Title)
</td>
<td>
  @Html.DisplayFor(modelItem => item.Disc)
</td>
<td>
  @Html.DisplayFor(modelItem => item.Box)
</td>
<td>
  @Html.DisplayFor(modelItem => item.IsLost)
</td>
<td>
  @Html.DisplayFor(modelItem => item.CountBorrowing)
</td>
<td>
  @Html.DisplayFor(modelItem => item.Comment)
</td>

<td>
  @if (item.BorrowingDate != null)
  {
    @(TimeZoneInfo.ConvertTimeFromUtc((DateTime)item.BorrowingDate,
        TimeZoneInfo.Local))
  }
</td>
<td>
  @if (item.ReturnDate != null)
  {
    @(TimeZoneInfo.ConvertTimeFromUtc((DateTime)item.ReturnDate,
        TimeZoneInfo.Local))
  }
</td>

<td>
  <a asp-page="/Customer/Details"
        asp-route-id="@Html.DisplayFor(modelItem => item.BorrowerId)">
    @Html.DisplayFor(modelItem => item.BorrowerId)
  </a>
</td>

