@page "{handler?}"
@model Videotheque.Pages.ArticlePage.ShowAll

@{
  Layout = "../Layout/_ShowAll.cshtml";
  ViewData["Title"] = "Article Create";
  ViewData["h1"] = "List of articles";
}

@section Thead {
  <th>
    @Html.DisplayNameFor(model => model.AbstractEntities[0].FilmId)
