@using Videotheque.Data
@model Customer

@{
  List<Article> CurrentlyBorrowedList = (List<Article>)
      ViewData["CurrentlyBorrowedList"];
  string[] ShouldBeRemovedArray =
    (string[])ViewData["ShouldBeRemovedArray"];
}

