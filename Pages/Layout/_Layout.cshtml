@{
  Layout = "../_Layout.cshtml";
}

@section head {
  @RenderSection("head", required: false)
}

@if (@Context.Request.Path.ToString().StartsWith("/Article",
  System.StringComparison.InvariantCultureIgnoreCase))
{
  <strong><em>
      Create Articles in its correspondig Films
      See:
      <a asp-page="/Film/ShowAll">
        @("/Film")
      </a>
      <br />
      Borrow and return an article in Customer page
      <a asp-page="/Customer/ShowAll">
        @("/Customer")
      </a>
    </em></strong>
}

@RenderBody()

@if (!@Context.Request.Path.ToString().EndsWith("/Create",
  System.StringComparison.InvariantCultureIgnoreCase)
  && !@Context.Request.Path.ToString().StartsWith("/Article",
    System.StringComparison.InvariantCultureIgnoreCase)
  )
{
  <a asp-page="./Create">Create</a>
}

@section SecondMain {
  @RenderSection("SecondMain", required: false)
}

